#include <iostream>

using namespace std;

int main()
{
	double score[5];

	cout << "첫 번째 학생의 점수를 입력하시오 : ";
	cin >> score[0];

	cout << "두 번째 학생의 점수를 입력하시오 : ";
	cin >> score[1];

	cout << "세 번째 학생의 점수를 입력하시오 : ";
	cin >> score[2];

	cout << "네 번째 학생의 점수를 입력하시오 : ";
	cin >> score[3];

	cout << "다섯 번째 학생의 점수를 입력하시오 : ";
	cin >> score[4];

	double totalScore = score[0] + score[1] + score[2] + score[3] + score[4];

	double avgScore = totalScore / 5;

	cout << "총합 : " << totalScore << endl;
	cout << "평균 : " << avgScore << endl;


	return 0;
}
